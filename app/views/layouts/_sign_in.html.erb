<!-- Button trigger modal -->
<button class="btn btn-default btn-lg" data-toggle="modal" data-target="#myModal">
  Sign in
</button>
<!-- Modal -->
<article class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <section class="modal-dialog">
    <section class="modal-content">
      <header class="modal-header">
       <h2>Sign in</h2>
          <%= form_for(User.new, as: :user, url: session_path(:user)) do |f| %>
            <section><%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true %></section>
            <section><%= f.label :password %><br />
              <%= f.password_field :password, autocomplete: "off" %></section>
            <section><%= f.check_box :remember_me %> <%= f.label :remember_me %></section>
            <section><%= f.submit "Sign in" %></section>
          <% end %>
      </footer>
    </section>
  </section>
</article>